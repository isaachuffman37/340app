<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
<% } %>

<div class="form-container">
    <form action="./add-classification" method="POST" class="classification-form">
      <div class="form-group">
        <label for="classification">Classification Name</label>
        <span>You must only included Alphabetic characters, no spaces allowed</span>
        <input 
          type="text" 
          id="classification" 
          name="classification_name" 
          required 
          pattern="[A-Za-z]+" 
          title="Only alphabetic characters are allowed. No spaces."
          placeholder="Enter classification"
          value ="<%= locals.classification_name %>"> 
      </div>
      <button type="submit" class="login-btn">Submit</button>
    </form>
</div>

